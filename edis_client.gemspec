Gem::Specification.new do |s|
  s.name = 'edis_client'
  s.version = '0.0.1'
  s.summary = %q{Ruby client for USITC's EDIS data web service}
  s.description = <<-DESC
  Provides easy access to the USITC's EDIS data web service (contains
  international trade investigation data) via an object spewing ruby class - no
  fuss no muss and definately no XML!
  DESC
  s.authors = ['Sean McDaniel', 'Carlos Fernandez'] #mostly sean
  s.files = 'lib/edis_client.rb'
  s.homepage = 'https://github.com/morologous/ruby-edis-data-client'
end